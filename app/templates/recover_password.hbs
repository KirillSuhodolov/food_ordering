<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <div class="page-header centered-text">
      <h1>
         Восстановление пароля
      </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <form class="login-form" {{action submit on='submit'}}>

      <div class="form-group">
        {{input type="password" value=password classNames="form-control login-field" placeholder="Пароль"}}
        <label class="login-field-icon fui-mail" for="login-name"></label>
      </div>

      <div class="form-group">
        {{input type="password" value=passwordConfirmation classNames="form-control login-field" placeholder="Повторите пароль"}}
        <label class="login-field-icon fui-mail" for="login-name"></label>
      </div>

      <button class="btn btn-primary btn-lg btn-block" type='submit'>Сменить пароль</button>
    </div>

  </div>
</div>