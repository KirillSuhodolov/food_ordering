<div class="page-header">
  <ul class="pagination pull-right calendar">
    <li><a href="#">&laquo;</a></li>
    <li><a href="#">Понедельник</a></li>
    <li><a href="#">Вторник</a></li>
    <li><a href="#">Среда</a></li>
    <li><a href="#">Четверг</a></li>
    <li><a href="#">Пятница</a></li>
    <li><a href="#">&raquo;</a></li>
  </ul>

  <h1>Меню</h1>
</div>

{{#each foodCategories}}
  <div class="panel panel-default foods-admin-list">
    <div class="panel-heading">
      <h3 class="column main">
        {{name}}
      </h3>
      <div class="column cost">
        <a href="#" class='btn btn-default' {{action addFood this}} >Новая позиция</a>
      </div>
      <div class="checkbox column visibility">
        <label>
          {{input type='checkbox' checked=isAllSelected}} Отображать всю категорию
        </label>
      </div>
      <div class="clearfix"></div>
    </div>
    {{!-- <div class="panel-body"></div> --}}

    <ul class="list-group">
      {{#each foods}}
        <li class="list-group-item">
          <h4 class="list-group-item-heading">{{name}}</h4>
          <div class="column main">
            <p class="list-group-item-text">{{composition}}</p>
          </div>
          <div class="column cost">
            {{cost}}
          </div>
          <div class="checkbox column visibility">
            <label>
              {{input type='checkbox' checked=isVisible}} Отображать в меню
            </label>
          </div>
          <div class="clearfix"></div>
        </li>
      {{/each}}
    </ul>
  </div>   
{{/each}}

<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container">
    {{#if isAdmin}}
      <button class="btn btn-default navbar-btn pull-right" href="#" {{action addCategory}}>Добавить категорию</button>
      <div class='pull-left available-menu'>
        <p class="navbar-text pull-left">Меню доступно до</p> 
        {{input value=available classNames="form-control pull-left"}}
      </div>
    {{else}}
      <button class="btn btn-default navbar-btn pull-right" href="#">Заказать</button>
      <p class="navbar-text pull-right">сумма</p> 
    {{/if}}
  </div>
</nav>