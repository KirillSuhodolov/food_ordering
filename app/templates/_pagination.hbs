<div class="pagination pull-right calendar">
  <ul>
    <li class="previous">
      {{link-to '' routeName (query-params date=prev) classNames="fui-arrow-left"}}
    </li>
    <li>
      {{#link-to routeName (query-params date=monday)}}
        Понедельник
        ({{date monday calendarFormat}})
      {{/link-to}}
    </li>
    <li>
      {{#link-to routeName (query-params date=tuesday)}}
        Вторник
        ({{date tuesday calendarFormat}})
      {{/link-to}}
    </li>
    <li>
      {{#link-to routeName (query-params date=wednesday)}}
        Среда
        ({{date wednesday calendarFormat}})
      {{/link-to}}
    </li>
    <li>
      {{#link-to routeName (query-params date=thursday)}}
        Четверг   
        ({{date thursday calendarFormat}})
      {{/link-to}}
    </li>
    <li>
      {{#link-to routeName (query-params date=friday)}}
        Пятница
        ({{date friday calendarFormat}})
      {{/link-to}}
    </li>
    <li  class="next">
      {{link-to '' routeName (query-params date=next) classNames="fui-arrow-right"}}
    </li>
  </ul>
</div>

