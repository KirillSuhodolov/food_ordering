<div class="page-header">
  {{partial 'pagination'}}
  <h1>Заказы</h1>
</div>

{{#each controller itemController='orders/item'}}
	{{#if orders.length}}
	  <div class="panel panel-default foods-admin-list orders block-embossed">
	    <div class="panel-heading">
	      <div class="column main">
	      	<h3>
	      		{{#if company.isSeparated}}
	      			Индивидуальные заказы
	      		{{else}}
	      			{{company.name}} 
	      		{{/if}}
	      	</h3>
	      </div>
	      <div class="column cost">
	      	{{company.address}}
	      </div>
	      <div class="column visibility">
	    		{{#if isProcessed}}
	      		<p class="text-success">обработано</p>
	    		{{else}}
			    	<a href="#" class="btn btn-embossed btn-warning" {{action process}}>
			    		Обработать!
			    	</a>
	    		{{/if}}        
	      </div>
	      <div class="column actions">
	        {{totalCost}}&nbsp;руб.
	      </div>
	      <div class="clearfix"></div>
	    </div>
	    <ul class="list-group">
	    	{{#each orders}}
	    		<li class="list-group-item">
						{{#if user.isSeparated}}
							<h4 class="list-group-item-heading">{{user.name}}, {{user.address}}, {{user.phone}}</h4>
						{{/if}}
						<ul class="list-group">
							{{#each orderFoods}}
						  	<li class="list-group-item">
									<div class="column main">
									    <div class="list-group-item-text">{{food.name}}</div>
									</div>
									<div class="column cost">
									  {{food.composition}}
									</div>
									<div class="checkbox column visibility">
									  <span class="label label-info">
									  	{{count}}&nbsp;шт.
									  </span>
									</div>
									<div class="column actions">
										{{totalCost}}&nbsp;руб.
									</div>
									<div class="clearfix"></div>  
						  	</li>
					  	{{/each}}
					  </ul>
	    		</li>
	    	{{/each}}
	    </ul>
	  </div> 
	{{/if}}
{{/each}}