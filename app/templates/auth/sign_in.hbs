<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <div class="page-header centered-text">
      <h1>Пожалуйста, войдите для заказа или
        {{link-to 'зарегистрируйтесь' 'signUp'}}
      </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    
    <form class="login-form" {{action signIn on='submit'}}>
      <div class="form-group">
        {{input type="text" value=email classNames="form-control login-field" placeholder="Введите почту"}}
        <label class="login-field-icon fui-mail" for="login-name"></label>
      </div>

      <div class="form-group">
        {{input type="password" value=password classNames="form-control login-field" placeholder="Пароль"}}
        <label class="login-field-icon fui-lock" for="login-pass"></label>
      </div>

      <button type='submit' class="btn btn-primary btn-lg btn-block">Войти</button>
      {{link-to 'Забыли пароль?' 'recoverPassword' classNames="login-link" }}
    </form>

  </div>
</div>